<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:waterdrop="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom|center_horizontal"
    android:orientation="horizontal">

        <doudou.library.com.refresh.custom.water.WaterDropView
            android:id="@+id/waterdroplist_waterdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            waterdrop:max_circle_radius = "20dp"
            waterdrop:min_circle_radius="5dp"
            waterdrop:waterdrop_color="#9ba2ab"
            waterdrop:topcircle_x="20dp"
            waterdrop:topcircle_y="20dp"
            waterdrop:bottomcircle_x="20dp"
            waterdrop:bottomcircle_y="20dp"/>

        <ImageView
            android:id="@+id/waterdroplist_header_progressbar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/bga_refresh_loading"
            android:visibility="gone" />

</LinearLayout>